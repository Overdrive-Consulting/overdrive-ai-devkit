{
  "name": "@enteroverdrive/ai-devkit",
  "author": "Konan <kixeyems0@gmail.com> (https://github.com/Konan69)",
  "version": "0.0.4",
  "description": "Bootstrap AI coding tools (Claude Code, Cursor, OpenCode) into your projects",
  "type": "module",
  "bin": {
    "adk": "dist/cli.js"
  },
  "files": [
    "dist",
    "assets",
    "commands",
    "skills",
    "rules",
    "mcp"
  ],
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build src/cli.ts --outdir dist --target node --format esm --external @clack/prompts --external @clack/core --external consola --external boxen --external simple-git --external gray-matter",
    "prepublishOnly": "bun run build",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/gradient-string": "^1.1.6",
    "vitest": "^3.0.5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@clack/core": "^0.5.0",
    "@clack/prompts": "^0.11.0",
    "boxen": "^8.0.1",
    "chalk-animation": "^2.0.3",
    "consola": "^3.4.2",
    "execa": "^9.6.1",
    "gradient-string": "^3.0.0",
    "gray-matter": "^4.0.3",
    "nanospinner": "^1.2.2",
    "picocolors": "^1.1.1",
    "simple-git": "^3.27.0",
    "tinyglobby": "^0.2.15",
    "zod": "^4.3.2"
  }
}
